    <PreferenceCategory app:iconSpaceReserved="false" app:summary="Look and Feel" app:title="Appearance">
        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:isPreferenceVisible="true"
            app:key="TEXT_SIZE_RANGE"
            app:summary="Set the font size"
            app:title="Adjust Font Size"
            />

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:isPreferenceVisible="true"
            app:key="IS_HIGH_CONTRAST_ENABLED"
            app:summaryOn="Toggle to turn on High Contrast"
            app:summaryOff="Toggle to turn off Contrast"
            app:title="High Contrast"
            />
    </PreferenceCategory>

    <PreferenceCategory app:iconSpaceReserved="false" app:summary="Manage Notifications" app:title="Notifications">
        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:isPreferenceVisible="false"
                app:key="IS_NOTIFICATIONS_ENABLED"
                app:summaryOn="Toggle to turn off reminders"
                app:summaryOff="Toggle to receive reminders"
                app:title="Receive Medication Reminders"
            />
    </PreferenceCategory>

    <PreferenceCategory app:iconSpaceReserved="false" app:summary="About" app:title="About">
        <Preference
            app:iconSpaceReserved="true"
            app:icon="@drawable/about_24"
            app:key="VIEW_ABOUT"
            app:summary="About App"
            app:title="About"
            />
    </PreferenceCategory>

</PreferenceScreen>