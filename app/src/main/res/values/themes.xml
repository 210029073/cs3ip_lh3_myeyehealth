<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyEyeHealth" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Base.Theme.MyEyeHealth.LargeText" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AppCompat.Large</item>
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.AppCompat.Large</item>
    </style>


    <style name="Theme.MyEyeHealth" parent="Base.Theme.MyEyeHealth">
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
    </style>


    <style name="Theme.MyEyeHealth.FloatingActionButton" >
        <item name="backgroundTint">@color/darkBlue</item>
        <item name="tint">@color/white</item>
    </style>


    <style name="Theme.App" parent="Theme.MaterialComponents">
        ...
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

    </style>

    <style name="Theme.MyEyeHealth.TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="backgroundColor">@color/darkBlue</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="Theme.MyEyeHealth.NavDrawer">
        <item name="navigationViewStyle">@style/Widget.Material3.NavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/white</item>
        <item name="colorSecondaryContainer">@color/darkBlue</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/darkBlue</item>
    </style>

    <style name="ThemeOverlay.Material3.NavigationView">
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorSecondaryContainer">@color/darkBlue</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
    </style>
    <style name="Theme.MyEyeHealth.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyEyeHealth.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyEyeHealth.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>