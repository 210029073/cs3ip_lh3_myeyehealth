<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyEyeHealth" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/darkBlue</item>
    </style>


    <style name="Theme.App" parent="Theme.Material3.DayNight">
        ...
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/darkBlue</item>
    </style>

    <style name="Theme.MyEyeHealth.TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSurface">@color/darkBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/darkBlue</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/darkBlue</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
    </style>

    <style name="ThemeOverlay.Material3.NavigationView">
        <item name="colorSurface">@color/darkBlue</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/darkBlue</item>
    </style>

    <style name="Theme.MyEyeHealth.FloatingActionButton" >
        <item name="backgroundTint">@color/white</item>
        <item name="tint">@color/darkBlue</item>
    </style>

</resources>