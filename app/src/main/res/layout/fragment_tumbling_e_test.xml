<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vision_tools.tumblinge.TumblingETestFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tumbling_e_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_end_test"
            style="@style/Theme.MyEyeHealth.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="End Test"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@id/tumbling_e_container"
            app:layout_constraintLeft_toLeftOf="@id/tumbling_e_container"
            app:layout_constraintTop_toTopOf="@id/tumbling_e_container"
            app:layout_constraintBottom_toBottomOf="@id/tumbling_e_container"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="1"/>

        <TextView
            android:id="@+id/txtLetterE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tumblingEMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to continue..."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtLetterE"
            app:layout_constraintVertical_bias="0.25" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>