<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <TextView
        android:id="@+id/txt_reminder_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder Id"
        android:layout_weight="1"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/txt_reminder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder Name"
        android:textSize="18dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/txt_reminder_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder type"
        android:textSize="18dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/txt_reminder_dose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder dose"
        android:textSize="18dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/reminder_time_taken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder time taken"
        android:textSize="18dp"
        android:layout_weight="1"
        />

<!--    <Button-->
