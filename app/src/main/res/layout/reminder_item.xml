<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/txt_reminder_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Reminder Id"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_reminder_name"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Reminder Name"
        android:textStyle="bold"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/txt_reminder_type"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Reminder type"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txt_reminder_dose"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Reminder dose"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/reminder_time_taken"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Reminder time taken"
        android:textStyle="bold"
        android:textSize="20dp" />

    <ImageView
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        tools:ignore="Suspicious0dp" />


